mixin videoBlock(video={})
    .videoBlock 
        a(href=routes.videoDetail(video.id))
            video.videoBlock_thumbnail(src=video.videoFile,controls=false)
            h4.videoBlock_title=video.title
            if video.views === 1
                h6.videoBlcok_views 1 view
            else
                h6.videoBlcok_views #{video.views} views