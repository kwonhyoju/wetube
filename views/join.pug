extends layouts/main.pug

block content
    .form-container
        form(action=routes.postJoin, method="post")
            input(type="name",placeholder="Full name",name="name", required=true)
            input(type="email",placeholder="Email",name="email", required=true)
            input(type="password",placeholder="password",name="password", required=true)
            input(type="password",placeholder="Verify password",name="password2", required=true)
            input(type="submit",value="Join Now")
        include partials/socialLogin